class Solution {
public:
    void solve(vector<int>&nums, int n)
    {
        if(n==0 || n==1)
            return;
        
        for(int i=0;i<n-1;i++)
        {
            if(nums[i]>nums[i+1])
                swap(nums[i],nums[i+1]);
        }
        solve(nums,n-1);
    }
    void sortColors(vector<int>& nums) 
    {
        solve(nums,nums.size());
    }
};